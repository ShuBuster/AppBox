<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:id="@+id/fond">
        <shape android:shape="rectangle">
            <stroke android:width="1px" android:color="#fff" />
            <solid android:color="@color/orange3" />
            <corners android:radius="10dp" />
        </shape>
    </item>


    <item android:left="3dp" android:top="3dp" android:right="3dp" android:bottom="14dp" 
        android:id="@+id/devant">
    <shape android:shape="rectangle">
            <gradient 
                android:startColor="@color/orange1"
                android:endColor="@color/orange2"
                android:angle="-90"/>
            <corners android:radius="10dp" />
        </shape>
    </item>


</layer-list>